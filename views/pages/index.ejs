<!DOCTYPE html>
<html>
	<!-- Start Head -->
	<head>
		<% include ../partials/head %>
	</head>
	<!-- End Head -->

	<!-- Start Body -->
	<body>

		<!-- Start Header -->
		<header>
			<% include ../partials/header %>
		</header>
		<!-- End Header -->

		<!-- Start Container -->
		<div class="container">
			<div class="wrap">

				<section id="current-projects-list">
					<h2>Current Projects</h2>
					<!-- <ul>
				    <% projects.forEach(function(project) { %>
				        <li><%= project.name %> - <%= project.client %></li>
				    <% }); %>
					</ul> -->
						<!-- handlebars template -->
						<script id="projects-template" type="text/x-handlebars-template">
							{{#each projects}}
								<ul>
									<li>{{name}} - {{client}}</li>
								</ul>
							{{/each}}
						</script>
				</section>

				<!-- Start New Project Section -->
				<section id="new-project-form">

					<form id="newProjectForm">
						<div class="form-float">
							<label for="title">Project Name</label>
							<input type="text" name="name" placeholder="Project Name" required>
						</div>
						<div class="form-float form-last">
							<label for="title">Client Name</label>
							<input type="text" name="client" placeholder="Client Name" required>
						</div>
						<div class="form-float">
							<label for="title">Project Start Date</label>
							<input type="text" name="project-start" placeholder="Start Date" required>
						</div>
						<div class="form-float form-last">
							<label for="title">Project End Date</label>
							<input type="text" name="project-end" placeholder="End Date" required>
						</div>
						<div class="form-block">
							<label for="title">Project Description</label>
							<textarea name="project-description" placeholder="Project Description:"></textarea>
						</div>
						<div class="form-block">
							<label for="title">Project Repo</label>
							<input type="text" name="project-repo" placeholder="https://github.com/repo-url" required>
						</div>
						<button type="submit" class="new-project-submit">Add New Project</button>
					</form>
					
				</section>
				<!-- End New Project Section -->

			</div>
			<!-- End Wrap -->
		</div>
		<!-- End Container -->

		<!-- Start Footer -->
		<footer>
			<% include ../partials/footer %>
		</footer>
		<!-- End Footer -->

	</body>
	<!-- End Body -->
</html>